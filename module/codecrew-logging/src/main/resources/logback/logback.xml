<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="APP_LOGGER_NAME" value="site.codecrew"/>

    <springProfile name="default, local">
        <include resource="appenders/console-plain-appender.xml"/>

        <logger name="${APP_LOGGER_NAME}" level="DEBUG"/>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <include resource="appenders/console-json-appender.xml"/>
        <logger name="${APP_LOGGER_NAME}" level="DEBUG"/>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
</configuration>
